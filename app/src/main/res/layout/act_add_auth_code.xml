<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:nextFocusLeft="@id/parent_layout"
    android:nextFocusUp="@id/parent_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_dodgeInsetEdges="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/fair_blue"
                    android:gravity="center"
                    android:minHeight="@dimen/_100sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_circle_white_color"
                        android:contentDescription="@string/todo"
                        android:padding="@dimen/_5sdp"
                        android:src="@mipmap/ic_app_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:text="@string/app_name"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_24sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Verify Auth Code"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="Phone Number verified successfully"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/txt_sub_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:ellipsize="none"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_5sdp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/code_one"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:digits="0123456789"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:ems="1"
                            android:gravity="center"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="number"
                            android:maxEms="1"
                            android:maxLength="1"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                        <View
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_gravity="center"
                            android:background="@color/black"
                            android:visibility="gone" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/code_two"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:digits="0123456789"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:ems="1"
                            android:gravity="center"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="number"
                            android:maxEms="1"
                            android:maxLength="1"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                        <View
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_gravity="center"
                            android:background="@color/black"
                            android:visibility="gone" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/code_three"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:digits="0123456789"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:ems="1"
                            android:gravity="center"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="number"
                            android:maxEms="1"
                            android:maxLength="1"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                        <View
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_gravity="center"
                            android:background="@color/black"
                            android:visibility="gone" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/code_four"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:digits="0123456789"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:ems="1"
                            android:gravity="center"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="number"
                            android:maxEms="1"
                            android:maxLength="1"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_verify"
                        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/btn_colored"
                        android:paddingLeft="@dimen/_25sdp"
                        android:paddingRight="@dimen/_25sdp"
                        android:text="Verify"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:id="@+id/redirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:padding="10dp"
            android:text="Copyright: Technlogi.com"
            android:textColor="@color/black" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>