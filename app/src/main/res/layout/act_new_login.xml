<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:nextFocusLeft="@id/parent_layout"
    android:nextFocusUp="@id/parent_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_dodgeInsetEdges="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/fair_blue"
                    android:gravity="center"
                    android:minHeight="@dimen/_100sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_circle_white_color"
                        android:contentDescription="@string/todo"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/app_icon" />

                    <TextView
                        android:id="@+id/erp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:text="@string/app_name"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_24sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_sign_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/txt_sign_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="Login"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view_sign_in"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:background="@color/colorPrimary"
                            android:paddingLeft="@dimen/_2sdp"
                            android:paddingRight="@dimen/_2sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_sign_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/txt_sign_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="Register"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view_sign_up"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:background="@color/colorPrimary"
                            android:paddingLeft="@dimen/_2sdp"
                            android:paddingRight="@dimen/_2sdp" />

                    </LinearLayout>

                </LinearLayout>

                <!--Login-->
                <LinearLayout
                    android:id="@+id/parent_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_login_mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:theme="@style/TextLabel"
                        app:errorTextAppearance="@style/error"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_login_mobile_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="Mobile Number"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="phone|textPhonetic"
                            android:maxLength="13"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_login_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:theme="@style/TextLabel"
                        app:errorTextAppearance="@style/error"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_login_pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:digits="0123456789"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="PIN"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="numberPassword"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_2sdp">

                        <Button
                            android:id="@+id/btn_login"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_colored"
                            android:paddingLeft="@dimen/_25sdp"
                            android:paddingRight="@dimen/_25sdp"
                            android:text="Login"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_weight="1"
                                android:background="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:padding="@dimen/_3sdp"
                                android:text="Or"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_weight="1"
                                android:background="@color/black" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_login_with"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_colored"
                            android:paddingLeft="@dimen/_25sdp"
                            android:paddingRight="@dimen/_25sdp"
                            android:text="Login With OTP"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>

                </LinearLayout>

                <!--Register_portion-->
                <LinearLayout
                    android:id="@+id/parent_registration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:visibility="visible">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_firm_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:theme="@style/TextLabel"
                        app:errorTextAppearance="@style/error"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_firm_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="@string/hint_firm_name"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text|textPersonName"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_contact_per_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:theme="@style/TextLabel"
                        app:errorTextAppearance="@style/error"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_contact_per_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="@string/hint_contact_person_name"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text|textPersonName"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_register_mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:theme="@style/TextLabel"
                        app:errorTextAppearance="@style/error"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_register_mobile_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="@string/hint_mobile_number"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="phone|textPhonetic"
                            android:maxLength="13"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_addr_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:theme="@style/TextLabel"
                        app:errorTextAppearance="@style/error"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_addr_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="@string/hint_street_name"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text|textPostalAddress"
                            android:maxLength="150"
                            android:maxLines="2"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_addr_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:theme="@style/TextLabel"
                        app:errorTextAppearance="@style/error"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_addr_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="@string/hint_street_number"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text|textPostalAddress"
                            android:maxLength="100"
                            android:maxLines="2"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_locality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:theme="@style/TextLabel"
                        app:errorTextAppearance="@style/error"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_locality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="@string/hint_location"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text|textPostalAddress"
                            android:maxLength="500"
                            android:maxLines="3"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_landmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:theme="@style/TextLabel"
                        app:errorTextAppearance="@style/error"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_landmark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="@string/hint_address"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text|textPostalAddress"
                            android:maxLength="500"
                            android:maxLines="3"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:theme="@style/TextLabel"
                        app:errorTextAppearance="@style/error"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="@string/hint_city"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text|textPostalAddress"
                            android:maxLength="500"
                            android:maxLines="3"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:theme="@style/TextLabel"
                        app:errorTextAppearance="@style/error"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="@string/hint_pin_code"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_gst_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:theme="@style/TextLabel"
                        app:errorTextAppearance="@style/error"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_gst_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="@string/hint_gst_number"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:maxLength="16"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_register_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:theme="@style/TextLabel"
                        app:errorTextAppearance="@style/error"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_register_pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:digits="0123456789"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="@string/hint_pin"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="numberPassword|numberDecimal"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_register_conf_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:theme="@style/TextLabel"
                        app:errorTextAppearance="@style/error"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/colorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_register_conf_pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:digits="0123456789"
                            android:drawablePadding="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="@string/hint_confirm_pin"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="numberPassword|numberDecimal"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            tools:targetApi="o" />

                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/btn_register"
                        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_colored"
                        android:paddingLeft="@dimen/_45sdp"
                        android:paddingRight="@dimen/_45sdp"
                        android:text="@string/hint_register"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:id="@+id/redirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:padding="10dp"
            android:text="@string/txt_copyright"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>