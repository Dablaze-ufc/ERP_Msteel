<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deatailsTab"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/details"
            android:layout_width="280sp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Details of item 1"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:src="@drawable/ic_delete" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:background="@color/colorWhite"
        android:padding="20dp">

        <TextView
            android:id="@+id/tran_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Rate"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tran_date_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="00"
            android:textColor="@color/black"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tran_date"
            android:layout_marginTop="10dp"
            android:text="Loading"
            android:textColor="@color/black"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/loading_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tran_date_v"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="00"
            android:textColor="@color/black"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loading"
            android:layout_marginTop="10dp"
            android:text="insurance"
            android:textColor="@color/black"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/insurance_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loading_v"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="00"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/insurance"
            android:layout_marginTop="10dp"
            android:text="GST"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gst_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/insurance_v"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="00"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/net_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gst"
            android:layout_marginTop="10dp"
            android:text="Net Rate"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/net_rate_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gst_v"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="00"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>