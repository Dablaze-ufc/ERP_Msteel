<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:background="@color/feint_blue"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_order"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:autoSizeTextType="uniform"
        android:text=""
        android:textColor="@color/colorWhite"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/item_details_order"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/linearOrder_order"
        android:paddingLeft="15sp"
        android:paddingRight="10sp"
        android:text="500(778)"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/linearOrder_order"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/item_order_order"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:paddingLeft="10sp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_buy_order"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:src="@drawable/ic_shoping"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>