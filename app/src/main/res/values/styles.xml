<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/feint_blue</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
    </style>

    <style name="AppTheme.ActLogin">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/color_ch_dark</item>
        <item name="colorPrimaryDark">@color/blueDark</item>

    </style>

    <style name="AppTheme.Registration">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/color_ch_dark</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
    </style>

    <style name="AppTheme.Home">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/feint_blue</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/feint_blue</item>
        <item name="colorControlActivated">@color/feint_blue</item>
        <item name="colorControlHighlight">@color/feint_blue</item>

    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/feint_blue</item>
    </style>

    <style name="WallSearchView" parent="Widget.AppCompat.SearchView">
        ...
        <item name="iconifiedByDefault">false</item>
        <item name="colorControlActivated">@color/feint_blue</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <!--Edit text themes-->
    <style name="error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="HintText" parent="AppTheme">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextLabel" parent="Theme.AppCompat">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/colorText</item>
    </style>

</resources>
